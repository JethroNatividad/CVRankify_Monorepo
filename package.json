{
  "name": "cvrankify_monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "setup": "./setup-env.sh && bun install && bun run db:generate",
    "dev": "bun --filter \"*\" dev",
    "db:push": "bun --filter web db:push",
    "db:studio": "bun --filter web db:studio",
    "db:generate": "bun --filter web db:generate"
  }
}